<div class="flex between add-card absolute hide-card">
  <div class="flex end column">
    <div class="my-5">
      <label for="weedname">Weedname:</label>
      <input
        type="text"
        name="weedname"
        id="weedname"
        placeholder="Weedname"
        autocomplete="off"
        class="form-control"
      />
    </div>
    <div class="my-5">
        <span class="switch">+</span>
      <label for="image">Image:</label>
      <input
        type="text"
        name="image"
        id="image"
        placeholder="Image"
        autocomplete="off"
        class="form-control"
      />
    </div>
    </div>

    <div class="flex column">
      <div class="flex my-5">
        <div>
          <label for="price">Price:</label>
          <select name="price" id="price">
            <option value="10">$10</option>
            <option value="20">$20</option>
            <option value="30">$30</option>
            <option value="40">$40</option>
            <option value="50">$50</option>
            <option value="60">$60</option>
            <option value="70">$70</option>
            <option value="80">$80</option>
            <option value="90">$90</option>
            <option value="100">$100</option>
          </select>
        </div>
        <div>
          <label for="quantity">Q:</label>
          <select name="quantity" id="quantity">
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="30">30</option>
            <option value="40">40</option>
            <option value="50">50</option>
            <option value="60">60</option>
            <option value="70">70</option>
            <option value="80">80</option>
            <option value="90">90</option>
            <option value="100">100</option>
          </select>
        </div>
      </div>
      <div class="flex center my-5">
        <label for="strain">Is Indica:</label>
        <input type="checkbox" name="strain" id="strain" />
      </div>
    </div>
    <button class="add-btn btn">Add</button>
  </div>
</div>


<script>
  
  var addBtn = document.querySelector(".add-btn");

  addBtn.onclick=()=>{
    let weedItem={
      weed_name:document.querySelector("input[name='weedname']").value,
      price:+document.querySelector("select[name='price']").value,
      quantity:+document.querySelector("select[name='quantity']").value,
      is_indica:document.querySelector("input[name='strain']:checked") === true ? true : false,
      on_sale:Math.random() > .5 ? true : false,
      weed_image:document.querySelector("input[name='image']").value
    }


    fetch("/addweed",{
      method:"POST",
    headers:{
      'Content-Type':"application/json"
    },
    body:JSON.stringify({weedItem})
  })

    console.log(weedItem)
    document.querySelector(".add-card").classList.add('hide-card')
  }
</script>
